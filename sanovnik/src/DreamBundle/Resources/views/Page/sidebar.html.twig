

 {% block sidebar %}

     {% if app.session.get('id')=='' %}
         <button type="button" class="btn btn-primary btn-lg col-md-12" data-toggle="modal" data-target="#regM">
             <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Podeli san
         </button>
     {% else %}
         <button type="button" class="btn btn-primary btn-lg col-md-12" data-toggle="modal" data-target="#myModal">
             <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Podeli san
         </button>
     {% endif %}


     <div class="row" style="padding: 3ch"></div>
    <div class="col-12-md"  style="padding: 0ch">
        <button type="button" class="btn btn-default  col-md-4">
            Facebook
        </button>
        <button type="button" class="btn btn-default col-md-4" >
            Twitter
        </button>
        <button type="button" class="btn btn-default col-md-4">
             Instagram
        </button>

    </div>
     <div class="row" style="padding: 3ch"></div>
     <div class="col-12-md well" >
         {{ render(controller("DreamBundle:Page:showRss")) }}
     </div>


     <!-- Modal -->
     <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
         <div class="modal-dialog " role="document">
             <div class="modal-content">
                 <div class="modal-body">
                     {{ form_start(form, {'action': path('createDream'), 'method': 'POST'}) }}
                     {{ form_errors(form) }}

                     {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}


                     {{ form_widget(form.save, {'attr': {'class': 'form-control btn btn-primary'}}) }}

                     {{ form_end(form) }}

                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-default" data-dismiss="modal">Ponisti</button>

                 </div>
             </div>
         </div>
     </div>

     <!-- Modal -->
     <div class="modal fade" id="regM" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
         <div class="modal-dialog " role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <div class="alert alert-danger" role="alert">
                         <strong>Morate bilit ulogovani da biste delili snove!</strong>
                     </div>

                 </div>
                 <div class="modal-body col-md-12">
                         <a href="#" type="button" data-dismiss="dialog" class="btn btn-primary  col-md-5" data-toggle="modal" data-target="#myModalLogin">Login</a>

                     <a href="#" type="button" class="btn btn-primary  col-md-5" data-toggle="modal" data-target="#myModalReg">Registracija</a>

                     <button type="button" class="btn btn-default col-md-2" data-dismiss="modal">Ponisti</button>


                 </div>
                 <div class="modal-footer">

                 </div>
             </div>
         </div>
     </div>
 {% endblock %}